{
    "name": "smartisan/laravel-presenter",
    "description": "Laravel Model Presenter",
    "keywords": [
        "smartisan",
        "laravel-presenter"
    ],
    "homepage": "https://github.com/iamohd/laravel-presenter",
    "license": "MIT",
    "authors": [
        {
            "name": "Mohammed Isa",
            "email": "mohd.itcs@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/contracts": "^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "Smartisan\\Presenter\\": "src",
            "Smartisan\\Presenter\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Smartisan\\Presenter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Smartisan\\Presenter\\PresenterServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
